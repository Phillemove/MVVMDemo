<Page x:Class="MVVMTest.Views.EditUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVVMTest.Views"
      xmlns:localVM="clr-namespace:MVVMTest.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditUser">
    <Page.DataContext>
        <localVM:EditUserViewModel/>
    </Page.DataContext>
    <Grid>
        <StackPanel>
            <Label Content="Edit User"/>
            <TextBox Text="{Binding User.Name}" Width="150" HorizontalAlignment="Left"/>
            <TextBox Text="{Binding User.Email}" Width="150" HorizontalAlignment="Left"/>
            <Button Content="Back" Width="100" HorizontalAlignment="Left" Margin="0,10,0,0" Style="{StaticResource BackBtn}" Command="{Binding CloseCommand}"/>
        </StackPanel>
    </Grid>
</Page>
